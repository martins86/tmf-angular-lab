#!/usr/bin/env bash
. "$(dirname -- "$0")/_/husky.sh"


if git diff --cached --name-only | xargs grep -n 'fdescribe('
  then
  echo "Error: 'fdescribe' encontrado. Por favor remova antes de realizar o commit."
  exit 1
fi

if git diff --cached --name-only | xargs grep -n 'fit('
  then
  echo "Error: 'fit' encontrado. Por favor remova antes de realizar o commit."
  exit 1
fi

if git diff --cached --name-only | xargs grep -n 'console.'
  then
  echo "Error: 'console' encontrado. Por favor remova antes de realizar o commit."
  exit 1
fi

npm run pre-commit
